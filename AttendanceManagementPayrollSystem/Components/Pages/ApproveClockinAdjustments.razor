@page "/approve-clockin-adjustments"
@using System.Text.Json
@using AttendanceManagementPayrollSystem.DTO
@inject IHttpClientFactory HttpFactory
@inject IJSRuntime JS
@inject INotificationService NotificationService
@using System.Net.Http.Json

<h3 class="border-bottom pb-2 mb-3">
    Duyệt yêu cầu chỉnh sửa chấm công
</h3>

<div class="mb-3 d-flex align-items-center">
    <label class="me-2">Từ:</label>
    <InputDate @bind-Value="fromDate" class="form-control me-3" style="width: 200px;" />
    <label class="me-2">Đến:</label>
    <InputDate @bind-Value="toDate" class="form-control me-3" style="width: 200px;" />
    <button class="btn btn-primary" @onclick="LoadData">Tìm</button>
</div>

<div class="row">
    <!-- BÊN TRÁI: Accordion danh sách phòng ban -->
    <div class="col-4">
        <Accordion>
            @if (groups == null)
            {
                <p>Đang tải dữ liệu...</p>
            }
            else
            {
                @foreach (var dep in groups)
                {
                    <AccordionItem>
                        <AccordionHeader>
                            <AccordionToggle>@dep.Department</AccordionToggle>
                        </AccordionHeader>
                        <AccordionBody>
                            <h6>Đang chờ duyệt</h6>
                            @if (dep.pending.Count == 0)
                            {
                                <p class="text-muted small">Không có đơn nào.</p>
                            }
                            else
                            {
                                <ul class="list-group small">
                                    @foreach (var item in dep.pending)
                                    {
                                        <li class="list-group-item list-group-item-action"
                                            @onclick="() => SelectRequest(item)">
                                            <strong>@item.EmployeeName</strong> - @item.Message
                                            <div class="text-muted small">@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</div>
                                        </li>
                                    }
                                </ul>
                            }
                        </AccordionBody>
                        <AccordionBody>
                            <h6>Đã duyệt</h6>
                            @if (dep.approved.Count == 0)
                            {
                                <p class="text-muted small">Không có đơn nào.</p>
                            }
                            else
                            {
                                <ul class="list-group small">
                                    @foreach (var item in dep.approved)
                                    {
                                        <li class="list-group-item list-group-item-action"
                                            @onclick="() => SelectRequest(item)">
                                            <strong>@item.EmployeeName</strong> - @item.Message
                                            <div class="text-muted small">@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</div>
                                        </li>
                                    }
                                </ul>
                            }
                        </AccordionBody>
                        <AccordionBody>
                            <h6>Đã từ chối</h6>
                            @if (dep.denied.Count == 0)
                            {
                                <p class="text-muted small">Không có đơn nào.</p>
                            }
                            else
                            {
                                <ul class="list-group small">
                                    @foreach (var item in dep.denied)
                                    {
                                        <li class="list-group-item list-group-item-action"
                                            @onclick="() => SelectRequest(item)">
                                            <strong>@item.EmployeeName</strong> - @item.Message
                                            <div class="text-muted small">@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</div>
                                        </li>
                                    }
                                </ul>
                            }
                        </AccordionBody>
                    </AccordionItem>
                }
            }
        </Accordion>

    </div>

    <!-- BÊN PHẢI: Chi tiết yêu cầu -->
    <div class="col-8">
        @if (selectedRequest == null)
        {
            <div class="alert alert-info">Chọn một yêu cầu bên trái để xem chi tiết.</div>
        }
        else
        {
            <div class="card shadow-sm">
                <div class="card-header">
                    <strong>Chi tiết yêu cầu chỉnh sửa</strong>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nhân viên:</dt>
                        <dd class="col-sm-8">@selectedRequest.EmployeeName</dd>

                        <dt class="col-sm-4">Nội dung:</dt>
                        <dd class="col-sm-8">@selectedRequest.Message</dd>

                        <dt class="col-sm-4">Giá trị yêu cầu:</dt>
                        <dd class="col-sm-8">@selectedRequest.RequestedValue</dd>

                        <dt class="col-sm-4">Ngày gửi:</dt>
                        <dd class="col-sm-8">@selectedRequest.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Trạng thái hiện tại:</dt>
                        <dd class="col-sm-8">
                            @if (selectedRequest.Status == "Approved")
                            {
                                <span class="badge bg-success">Đã duyệt</span>
                            }
                            else if (selectedRequest.Status == "Denied")
                            {
                                <span class="badge bg-danger">Đã từ chối</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Đang chờ duyệt</span>
                            }
                        </dd>
                    </dl>

                    

                    @if (selectedRequest.Status == "Pending")
                    {
                        <div class="mb-3">
                            <label class="form-label">Phản hồi:</label>
                            <textarea class="form-control" rows="3" @bind="comment"
                                      placeholder="Nhập phản hồi cho nhân viên..."></textarea>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button class="btn btn-secondary" @onclick="CancelDetail">Huỷ</button>
                            <button class="btn btn-danger" @onclick='() => SetStatus("Denied")'>Từ chối</button>
                            <button class="btn btn-success" @onclick='() => SetStatus("Approved")'>Duyệt</button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center mb-0">
                            Yêu cầu này đã được xử lý.
                        </div>
                    }
                </div>
            </div>
        }
    </div>

</div>

<!-- Modal xác nhận -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Xác nhận gửi phản hồi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc muốn gửi phản hồi cho yêu cầu này không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" @onclick="ConfirmSend">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ClockinAdjustmentRequestGroupDTO>? groups;
    private ClockinAdjustmentRequestDTO? selectedRequest;
    private DateTime fromDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
    private DateTime toDate = DateTime.Now;
    private bool isResponding = false;
    private string selectedStatus = "";
    private string comment = "";
    private bool _initialized;
    private EmployeeDTO? Employee;

    private async Task LoadData()
    {
        var client = HttpFactory.CreateClient("ApiClient");
        string url = $"api/clockin-adjustments/groupbydep/daterange?from={fromDate:yyyy-MM-dd}&to={toDate:yyyy-MM-dd}";
        groups = await client.GetFromJsonAsync<List<ClockinAdjustmentRequestGroupDTO>>(url);
        selectedRequest = null;
    }

    private void SelectRequest(ClockinAdjustmentRequestDTO req)
    {
        selectedRequest = req;
        comment = "";
        isResponding = false;
    }

    private void SetStatus(string status)
    {
        selectedStatus = status;
        JS.InvokeVoidAsync("ShowConfirmModal");
    }


    private async Task ConfirmSend()
    {
        await SendResponse();
        await JS.InvokeVoidAsync("HideConfirmModal");
    }

    private void CancelResponse()
    {
        isResponding = false;
    }

    private async Task SendResponse()
    {
        if (selectedRequest == null) return;

        var client = HttpFactory.CreateClient("ApiClient");
        var body = new
        {
            ApproverId = Employee?.EmpId,
            RequestId = selectedRequest.RequestId,
            Status = selectedStatus,
            Comment = comment
        };

        HttpResponseMessage? clockinComRes = null;

        if (selectedStatus == "Approved")
        {
            var clockinComBody = new
            {
                Id = selectedRequest.ClockInComponentId,
                OverridedWorkunits = selectedRequest.RequestedValue
            };

            clockinComRes = await client.PostAsJsonAsync("api/clockin-com/respond", clockinComBody);
        }

        var res = await client.PostAsJsonAsync("api/clockin-adjustments/respond", body);

        var success = res.IsSuccessStatusCode && (selectedStatus != "Approved" || (clockinComRes != null && clockinComRes.IsSuccessStatusCode));

        if (success)
        {
            await JS.InvokeVoidAsync("alert", "Cập nhật thành công!");
            await LoadData();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Gửi phản hồi thất bại!");
        }

        isResponding = false;
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private void CancelDetail()
    {
        selectedRequest = null;
        comment = "";
        isResponding = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            _initialized = true;
            try
            {
                var empJson = await JS.InvokeAsync<string>("localStorage.getItem", "employee");
                if (!string.IsNullOrWhiteSpace(empJson))
                {
                    Employee = JsonSerializer.Deserialize<EmployeeDTO>(empJson);
                }
                else
                {
                    NotificationService.Warning("Không thể tìm thấy thông tin nhân viên!", "Lỗi");
                }
            }
            catch
            {
                NotificationService.Error("Không thể đọc thông tin nhân viên từ localStorage!", "Lỗi");
            }
            StateHasChanged();
        }
    }
}

<script>
    function ShowConfirmModal() {
        var modal = new bootstrap.Modal(document.getElementById('confirmModal'));
        modal.show();
    }
    function HideConfirmModal() {
        var modalEl = document.getElementById('confirmModal');
        var modal = bootstrap.Modal.getInstance(modalEl);
        if (modal) modal.hide();
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>