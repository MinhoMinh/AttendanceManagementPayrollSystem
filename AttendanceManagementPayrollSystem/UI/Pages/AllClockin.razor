@page "/allclockin"
@using AttendanceManagementPayrollSystem.DTO
@inject HttpClient Http

<div class="page-container">
    <div class="header-section">
        <div class="header-icon">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
        </div>
        <h3 class="page-title">Bảng chấm công theo phòng ban</h3>
        <p class="page-subtitle">Xem và quản lý dữ liệu chấm công nhân viên</p>
    </div>

    @if (departments == null)
    {
        <div class="loading-container">
            <div class="spinner"></div>
            <p>Đang tải danh sách phòng ban...</p>
        </div>
    }
    else
    {
        <div class="department-selector-card">
            <label for="deptSelect" class="selector-label">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                Chọn phòng ban
            </label>
            <select id="deptSelect" @onchange="OnDepartmentChanged" class="department-select">
                <option value="">-- Chọn phòng ban --</option>
                @foreach (var dept in departments)
                {
                    <option value="@dept.DepartmentName">@dept.DepartmentName</option>
                }
            </select>
        </div>

        @if (selectedDepartment != null)
        {
            var filteredClockins = allClockins.Where(c => selectedDepartment.EmployeeIds.Contains(c.EmpId)).ToList();
            <div class="results-section">
                <div class="section-header">
                    <h4 class="section-title">@selectedDepartment.DepartmentName</h4>
                    <span class="record-count">@filteredClockins.Count bản ghi</span>
                </div>

                <div class="table-container">
                    <table class="clockin-table">
                        <thead>
                            <tr>
                                <th>Mã nhân viên</th>
                                <th>Ngày</th>
                                <th>Giờ làm việc</th>
                                <th>Giờ theo lịch</th>
                                <th>Đơn vị công việc</th>
                                <th>Đơn vị theo lịch</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var clockin in filteredClockins)
                            {
                                <tr>
                                    <td><span class="emp-badge">@clockin.EmpId</span></td>
                                    <td>@clockin.Date.ToString("dd/MM/yyyy")</td>
                                    <td><strong>@(clockin.WorkHours ?? 0)</strong></td>
                                    <td>@(clockin.ScheduledHours ?? 0)</td>
                                    <td><strong>@(clockin.WorkUnits ?? 0)</strong></td>
                                    <td>@(clockin.ScheduledUnits ?? 0)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="empty-state">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M9 11l3 3L22 4"></path>
                    <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
                </svg>
                <p>Vui lòng chọn phòng ban để xem bảng chấm công</p>
            </div>
        }
    }
</div>

<style>
    .page-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #FFE4A1 0%, #fff8e7 100%);
        min-height: 100vh;
    }

    .header-section {
        text-align: center;
        margin-bottom: 3rem;
        background: white;
        padding: 2.5rem;
        border-radius: 20px;
        box-shadow: 0 8px 24px rgba(151, 50, 45, 0.1);
    }

    .header-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #97322D 0%, #c13d36 100%);
        color: #FFE4A1;
        border-radius: 50%;
        margin-bottom: 1rem;
        box-shadow: 0 4px 12px rgba(151, 50, 45, 0.3);
    }

    .page-title {
        font-size: 2rem;
        color: #97322D;
        margin: 1rem 0 0.5rem 0;
        font-weight: 700;
    }

    .page-subtitle {
        color: #666;
        font-size: 1rem;
        margin: 0;
    }

    .loading-container {
        text-align: center;
        padding: 4rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 12px rgba(151, 50, 45, 0.1);
    }

    .spinner {
        border: 4px solid #FFE4A1;
        border-top: 4px solid #97322D;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        animation: spin 1s linear infinite;
        margin: 0 auto 1rem auto;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .department-selector-card {
        background: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 12px rgba(151, 50, 45, 0.1);
        margin-bottom: 2rem;
        border-left: 5px solid #97322D;
    }

    .selector-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: #97322D;
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

        .selector-label svg {
            color: #97322D;
        }

    .department-select {
        width: 100%;
        padding: 1rem 1.5rem;
        font-size: 1rem;
        border: 2px solid #FFE4A1;
        border-radius: 10px;
        background: white;
        color: #333;
        cursor: pointer;
        transition: all 0.3s ease;
        outline: none;
    }

        .department-select:hover {
            border-color: #97322D;
            box-shadow: 0 2px 8px rgba(151, 50, 45, 0.15);
        }

        .department-select:focus {
            border-color: #97322D;
            box-shadow: 0 0 0 3px rgba(151, 50, 45, 0.1);
        }

    .results-section {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 12px rgba(151, 50, 45, 0.1);
        overflow: hidden;
    }

    .section-header {
        background: linear-gradient(135deg, #97322D 0%, #c13d36 100%);
        color: white;
        padding: 1.5rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .section-title {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
    }

    .record-count {
        background: rgba(255, 228, 161, 0.3);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
    }

    .table-container {
        overflow-x: auto;
        padding: 2rem;
    }

    .clockin-table {
        width: 100%;
        border-collapse: collapse;
    }

        .clockin-table thead tr {
            background: #FFE4A1;
            color: #97322D;
        }

        .clockin-table th {
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .clockin-table tbody tr {
            border-bottom: 1px solid #f0f0f0;
            transition: all 0.2s ease;
        }

            .clockin-table tbody tr:hover {
                background: #fff8e7;
                transform: translateX(5px);
            }

        .clockin-table td {
            padding: 1rem;
            color: #333;
        }

    .emp-badge {
        background: #97322D;
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 12px rgba(151, 50, 45, 0.1);
    }

        .empty-state svg {
            color: #FFE4A1;
            margin-bottom: 1.5rem;
            opacity: 0.7;
        }

        .empty-state p {
            color: #666;
            font-size: 1.1rem;
            margin: 0;
        }

    @@media (max-width: 768px) {
        .page-container {
            padding: 1rem;
        }

        .header-section {
            padding: 1.5rem;
        }

        .page-title {
            font-size: 1.5rem;
        }

        .section-header {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        .table-container {
            padding: 1rem;
        }

        .clockin-table {
            font-size: 0.9rem;
        }

            .clockin-table th,
            .clockin-table td {
                padding: 0.75rem 0.5rem;
            }
    }
</style>

@code {
    private List<DepartmentAttendanceDTO> departments;
    private DepartmentAttendanceDTO selectedDepartment;
    private List<ClockinDTO> allClockins;

    protected override async Task OnInitializedAsync()
    {
        departments = await Http.GetFromJsonAsync<List<DepartmentAttendanceDTO>>("https://localhost:7088/api/ManagerAttendanceApi/summary");
        allClockins = await Http.GetFromJsonAsync<List<ClockinDTO>>("https://localhost:7088/api/ManagerAttendanceApi/allclockins");
    }

    private void OnDepartmentChanged(ChangeEventArgs e)
    {
        var deptName = e.Value?.ToString();
        if (!string.IsNullOrEmpty(deptName))
        {
            selectedDepartment = departments.FirstOrDefault(d => d.DepartmentName == deptName);
        }
        else
        {
            selectedDepartment = null;
        }
    }
}
