<style>
    :root {
        --primary-color: #97322D;
        --secondary-color: #FFE4A1;
        --primary-dark: #7a271f;
        --primary-light: #b63f33;
    }

    .leave-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 1.5rem 0;
    }

    .page-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        border-radius: 16px;
        padding: 1.5rem 2rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 8px 25px rgba(151, 50, 45, 0.3);
        color: white;
    }

        .page-header h2 {
            font-size: 1.6rem;
            font-weight: 700;
            margin: 0;
        }

    .filter-card {
        background: white;
        border-radius: 12px;
        padding: 1.2rem;
        box-shadow: 0 3px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 1.5rem;
    }

    .filter-row {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .filter-group {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .filter-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--primary-color);
        white-space: nowrap;
    }

    .filter-input {
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 0.5rem 0.75rem;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        width: 150px;
    }

        .filter-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.15rem rgba(151, 50, 45, 0.15);
        }

    .btn-search {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s ease;
    }

        .btn-search:hover {
            background: var(--primary-dark);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(151, 50, 45, 0.3);
        }

    .content-wrapper {
        display: grid;
        grid-template-columns: 380px 1fr;
        gap: 1.5rem;
    }

    .list-section {
        background: linear-gradient(to bottom, #ffffff 0%, #f8f9fa 100%);
        border-radius: 12px;
        padding: 1.2rem;
        box-shadow: 0 3px 12px rgba(0, 0, 0, 0.08);
        max-height: 75vh;
        overflow-y: auto;
        border: 1px solid rgba(255, 228, 161, 0.3);
    }

        .list-section::-webkit-scrollbar {
            width: 6px;
        }

        .list-section::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        .list-section::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 10px;
        }

    .section-header {
        background: var(--secondary-color);
        color: var(--primary-color);
        padding: 0.75rem 1rem;
        border-radius: 8px;
        font-weight: 700;
        font-size: 0.95rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    .status-group {
        margin-bottom: 1.2rem;
    }

    .status-title {
        font-size: 0.8rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.6rem;
        padding: 0.4rem 0.6rem;
        background: #f8f9fa;
        border-radius: 6px;
        border-left: 3px solid var(--primary-color);
    }

    .request-item {
        background: white;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 0.75rem;
        margin-bottom: 0.5rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

        .request-item:hover {
            border-color: var(--secondary-color);
            background: #fafafa;
            transform: translateX(3px);
        }

        .request-item.active {
            background: linear-gradient(to right, var(--secondary-color), transparent);
            border-color: var(--primary-color);
        }

    .request-name {
        font-weight: 700;
        font-size: 0.85rem;
        color: var(--primary-color);
        margin-bottom: 0.2rem;
    }

    .request-date {
        font-size: 0.75rem;
        color: #6c757d;
    }

    .empty-message {
        text-align: center;
        padding: 1rem;
        color: #adb5bd;
        font-size: 0.8rem;
        font-style: italic;
    }

    .detail-section {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        animation: slideIn 0.3s ease;
    }

    @@keyframes slideIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .detail-header {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white;
        padding: 1.5rem 2rem;
        font-weight: 700;
        font-size: 1.05rem;
        position: relative;
        overflow: hidden;
    }

        .detail-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 200px;
            height: 200px;
            background: var(--secondary-color);
            border-radius: 50%;
            opacity: 0.1;
        }

    .detail-content {
        padding: 2rem;
        background: linear-gradient(to bottom, #ffffff 0%, #f8f9fa 100%);
    }

    .detail-grid {
        display: grid;
        grid-template-columns: 140px 1fr;
        gap: 0.75rem 1rem;
        margin-bottom: 1.5rem;
        font-size: 0.85rem;
    }

    .detail-row {
        display: contents;
    }

    .detail-label {
        font-weight: 600;
        color: #495057;
        padding: 0.6rem 0;
        display: flex;
        align-items: center;
    }

    .detail-value {
