<div class="leave-container">
    <div class="container-fluid px-4">
        <!-- Header -->
        <div class="page-header">
            <h2>Duyệt yêu cầu nghỉ phép</h2>
        </div>

        <!-- Filter -->
        <div class="filter-card">
            <div class="filter-row">
                <div class="filter-group">
                    <label class="filter-label">Từ:</label>
                    <InputDate @bind-Value="fromDate" class="filter-input" />
                </div>
                <div class="filter-group">
                    <label class="filter-label">Đến:</label>
                    <InputDate @bind-Value="toDate" class="filter-input" />
                </div>
                <button class="btn-search" @onclick="LoadData">Tìm kiếm</button>
            </div>
        </div>

        <!-- Content -->
        <div class="content-wrapper">
            <!-- Danh sách yêu cầu -->
            <div class="list-section">
                @if (groups == null)
                {
                    <div class="loading-message">Đang tải dữ liệu...</div>
                }
                else if (!groups.Any())
                {
                    <div class="empty-message">Không có yêu cầu nào trong khoảng thời gian này</div>
                }
                else
                {
                    var dep = groups.First();
                    <div class="section-header">@dep.Department</div>

                    <!-- Đang chờ duyệt -->
                    <div class="status-group">
                        <div class="status-title">Đang chờ duyệt (@dep.pending.Count)</div>
                        @if (dep.pending.Count == 0)
                        {
                            <div class="empty-message">Không có đơn nào</div>
                        }
                        else
                        {
                            @foreach (var item in dep.pending)
                            {
                                <div class="request-item @(selectedRequest?.ReqId == item.ReqId ? "active" : "")"
                                     @onclick="() => SelectRequest(item)">
                                    <div class="request-name">@(item.EmpName ?? "Không xác định")</div>
                                    <div class="request-date">@item.ReqDate.ToString("dd/MM/yyyy")</div>
                                </div>
                            }
                        }
                    </div>

                    <!-- Đã duyệt -->
                    <div class="status-group">
                        <div class="status-title">Đã duyệt (@dep.approved.Count)</div>
                        @if (dep.approved.Count == 0)
                        {
                            <div class="empty-message">Không có đơn nào</div>
                        }
                        else
                        {
                            @foreach (var item in dep.approved)
                            {
                                <div class="request-item @(selectedRequest?.ReqId == item.ReqId ? "active" : "")"
                                     @onclick="() => SelectRequest(item)">
                                    <div class="request-name">@(item.EmpName ?? "Không xác định")</div>
                                    <div class="request-date">@item.ReqDate.ToString("dd/MM/yyyy")</div>
                                </div>
                            }
                        }
                    </div>

                    <!-- Đã từ chối -->
                    <div class="status-group">
                        <div class="status-title">Đã từ chối (@dep.denied.Count)</div>
                        @if (dep.denied.Count == 0)
                        {
                            <div class="empty-message">Không có đơn nào</div>
                        }
                        else
                        {
                            @foreach (var item in dep.denied)
                            {
                                <div class="request-item @(selectedRequest?.ReqId == item.ReqId ? "active" : "")"
                                     @onclick="() => SelectRequest(item)">
                                    <div class="request-name">@(item.EmpName ?? "Không xác định")</div>
                                    <div class="request-date">@item.ReqDate.ToString("dd/MM/yyyy")</div>
                                </div>
                            }
                        }
                    </div>
                }
            </div>

            <!-- Chi tiết yêu cầu -->
            <div class="detail-section">
                @if (selectedRequest == null)
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">📋</div>
                        <h5>Chọn một yêu cầu</h5>
                        <p>Chọn một yêu cầu bên trái để xem chi tiết</p>
                    </div>
                }
                else
                {
                    <div class="detail-header">
                        Chi tiết yêu cầu nghỉ phép
                    </div>
                    <div class="detail-content">
                        <div class="detail-grid">
                            <div class="detail-row">
                                <div class="detail-label">Nhân viên:</div>
                                <div class="detail-value">@(selectedRequest.EmpName ?? "Không xác định")</div>
                            </div>

                            <div class="detail-row">
                                <div class="detail-label">Lý do:</div>
                                <div class="detail-value">@selectedRequest.Reason</div>
                            </div>

                            <div class="detail-row">
                                <div class="detail-label">Ngày bắt đầu:</div>
                                <div class="detail-value">@selectedRequest.StartDate.ToString("dd/MM/yyyy")</div>
                            </div>

                            <div class="detail-row">
                                <div class="detail-label">Ngày kết thúc:</div>
                                <div class="detail-value">@selectedRequest.EndDate.ToString("dd/MM/yyyy")</div>
                            </div>

                            <div class="detail-row">
                                <div class="detail-label">Số ngày:</div>
                                <div class="detail-value">@selectedRequest.NumbersOfDays ngày</div>
                            </div>

                            <div class="detail-row">
                                <div class="detail-label">Trạng thái:</div>
                                <div class="detail-value">
                                    @if (selectedRequest.Status == "Approved")
                                    {
                                        <span class="status-badge approved">Đã duyệt</span>
                                    }
                                    else if (selectedRequest.Status == "Denied")
                                    {
                                        <span class="status-badge denied">Đã từ chối</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge pending">Đang chờ duyệt</span>
                                    }
                                </div>
                            </div>
                        </div>

                        @if (selectedRequest.Status == "Pending")
                        {
                            <div class="action-buttons">
                                <button class="btn-action btn-cancel" @onclick="CancelDetail">Huỷ</button>
                                <button class="btn-action btn-deny" @onclick='() => SetStatus("Denied")'>Từ chối</button>
                                <button class="btn-action btn-approve" @onclick='() => SetStatus("Approved")'>Duyệt</button>
                            </div>
                        }
                        else
                        {
                            <div class="processed-alert">
                                Yêu cầu này đã được xử lý
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Xác nhận gửi phản hồi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc muốn gửi phản hồi cho yêu cầu này không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" @onclick="ConfirmSend">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<LeaveRequestGroupDTO>? groups;
    private LeaveRequestDTO? selectedRequest;
    private DateTime fromDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
    private DateTime toDate = DateTime.Now;
    private string selectedStatus = "";
    private string comment = "";
    private EmployeeDTO? Employee;
    private EmployeeWithDepIdDTO? employeeWithDepId;
    private bool _initialized;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            _initialized = true;
            try
            {
                var empJson = await JS.InvokeAsync<string>("localStorage.getItem", "employee");
                if (!string.IsNullOrWhiteSpace(empJson))
                {
                    Employee = JsonSerializer.Deserialize<EmployeeDTO>(empJson);
                    await LoadData();

                }
                else
                {
                    NotificationService.Warning("Không thể tìm thấy thông tin nhân viên!", "Lỗi");
                }
            }
            catch
            {
                NotificationService.Error("Không thể đọc thông tin nhân viên từ localStorage!", "Lỗi");
            }
            StateHasChanged();
        }
    }

    private async Task LoadData()
    {
        if (Employee == null) return;
        var client = HttpFactory.CreateClient("ApiClient");
        var employeeWithDep = await client.GetFromJsonAsync<EmployeeWithDepIdDTO>($"api/employees/ewd/{Employee.EmpId}");
        string url = $"api/leave/groupbydep/daterange?depId={employeeWithDep.DepId}&from={fromDate:yyyy-MM-dd}&to={toDate:yyyy-MM-dd}";
        groups = await client.GetFromJsonAsync<List<LeaveRequestGroupDTO>>(url);
        selectedRequest = null;
    }

    private void SelectRequest(LeaveRequestDTO req)
    {
        selectedRequest = req;
        comment = "";
    }

    private void SetStatus(string status)
    {
        selectedStatus = status;
        JS.InvokeVoidAsync("ShowConfirmModal");
    }

    private async Task ConfirmSend()
    {
        await SendResponse();
        await JS.InvokeVoidAsync("HideConfirmModal");
    }

    private async Task SendResponse()
    {
        if (selectedRequest == null) return;

        var client = HttpFactory.CreateClient("ApiClient");
        var body = new LeaveRequestApprovalDTO
        {
            ReqId = selectedRequest.ReqId,
            Status = selectedStatus,
            ApprovedBy = Employee.EmpId,
            ApprovedDate = DateOnly.FromDateTime(DateTime.Now)
        };

        var res = await client.PutAsJsonAsync("api/leave/approve", body);

        if (res.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Cập nhật thành công!");
            await LoadData();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Gửi phản hồi thất bại!");
        }
    }

    private void CancelDetail()
    {
        selectedRequest = null;
        comment = "";
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }
}

<script>
    function ShowConfirmModal() {
        var modal = new bootstrap.Modal(document.getElementById('confirmModal'));
        modal.show();
    }
    function HideConfirmModal() {
        var modalEl = document.getElementById('confirmModal');
        var modal = bootstrap.Modal.getInstance(modalEl);
        if (modal) modal.hide();
    }
</script>

