@page "/rates-tax"
@using AttendanceManagementPayrollSystem.DTO
@inject IHttpClientFactory HttpFactory
@inject NavigationManager Navigation
@using Blazorise

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>
    :root {
        --primary-color: #97322D;
        --secondary-color: #FFE4A1;
        --primary-dark: #7a271f;
        --bg-cream: #FFF9ED;
    }

    .rates-container {
        min-height: 100vh;
        background: linear-gradient(180deg, var(--bg-cream) 0%, #FFFEF9 100%);
        padding: 2rem 0;
    }

    /* Header Section */
    .page-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        border-radius: 20px;
        padding: 2.5rem;
        margin-bottom: 2.5rem;
        box-shadow: 0 8px 24px rgba(151, 50, 45, 0.25);
        color: white;
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -100px;
            right: -100px;
            width: 300px;
            height: 300px;
            background: var(--secondary-color);
            border-radius: 50%;
            opacity: 0.1;
        }

        .page-header h1 {
            font-size: 2.2rem;
            font-weight: 700;
            margin: 0;
            position: relative;
            z-index: 1;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

    .edit-btn {
        background: var(--secondary-color);
        color: var(--primary-color);
        border: 2px solid var(--secondary-color);
        padding: 0.9rem 2rem;
        border-radius: 12px;
        font-weight: 700;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(255, 228, 161, 0.4);
        position: relative;
        z-index: 1;
    }

        .edit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(255, 228, 161, 0.6);
            background: white;
            border-color: white;
        }

    /* Tab Navigation */
    .custom-tabs {
        background: white;
        border-radius: 20px;
        padding: 0;
        box-shadow: 0 4px 20px rgba(151, 50, 45, 0.1);
        margin-bottom: 2rem;
        overflow: hidden;
        border: 3px solid var(--secondary-color);
    }

    .tab-navigation {
        background: linear-gradient(135deg, var(--secondary-color) 0%, #ffd97d 100%);
        display: flex;
        padding: 0.5rem;
        gap: 0.5rem;
        border-bottom: 3px solid var(--primary-color);
    }

    .tab-btn {
        flex: 1;
        background: rgba(255, 255, 255, 0.5);
        border: 2px solid transparent;
        padding: 1.2rem 2rem;
        font-weight: 700;
        font-size: 1.05rem;
        color: var(--primary-color);
        border-radius: 12px;
        transition: all 0.3s ease;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

        .tab-btn:hover {
            background: rgba(255, 255, 255, 0.9);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(151, 50, 45, 0.2);
        }

        .tab-btn.active {
            background: white;
            border-color: var(--primary-color);
            box-shadow: 0 6px 16px rgba(151, 50, 45, 0.3);
            transform: translateY(-2px);
        }

        .tab-btn i {
            font-size: 1.3rem;
        }

    /* Content Panel */
    .content-panel {
        padding: 2.5rem;
        background: white;
    }

    /* List Section */
    .list-column {
        background: linear-gradient(180deg, var(--bg-cream) 0%, white 100%);
        border-radius: 16px;
        padding: 1.5rem;
        border: 2px solid var(--secondary-color);
        box-shadow: 0 4px 12px rgba(151, 50, 45, 0.08);
    }

    .section-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding-bottom: 1rem;
        border-bottom: 3px solid var(--secondary-color);
    }

        .section-title i {
            font-size: 1.5rem;
        }

    .list-section {
        max-height: 600px;
        overflow-y: auto;
        padding-right: 0.5rem;
    }

        .list-section::-webkit-scrollbar {
            width: 8px;
        }

        .list-section::-webkit-scrollbar-track {
            background: var(--bg-cream);
            border-radius: 10px;
        }

        .list-section::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 10px;
        }

            .list-section::-webkit-scrollbar-thumb:hover {
                background: var(--primary-dark);
            }

    .list-item {
        background: white;
        border-radius: 14px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 3px solid var(--secondary-color);
        box-shadow: 0 3px 10px rgba(151, 50, 45, 0.08);
        position: relative;
    }

        .list-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 6px;
            background: var(--secondary-color);
            border-radius: 14px 0 0 14px;
            transition: all 0.3s ease;
        }

        .list-item:hover {
            transform: translateX(8px);
            box-shadow: 0 6px 20px rgba(151, 50, 45, 0.2);
            border-color: var(--primary-color);
        }

            .list-item:hover::before {
                width: 8px;
                background: var(--primary-color);
            }

        .list-item.active {
            background: linear-gradient(135deg, var(--secondary-color) 0%, #ffd97d 100%);
            border-color: var(--primary-color);
            box-shadow: 0 8px 24px rgba(151, 50, 45, 0.3);
            transform: translateX(8px);
        }

            .list-item.active::before {
                width: 8px;
                background: var(--primary-color);
            }

    .item-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.75rem;
    }

    .item-subtitle {
        font-size: 0.95rem;
        color: #6c757d;
        margin-bottom: 0.4rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .item-subtitle i {
            color: var(--primary-color);
        }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 700;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

        .status-badge.active {
            background: #d4edda;
            color: #155724;
            border: 2px solid #28a745;
        }

        .status-badge.inactive {
            background: #e2e3e5;
            color: #6c757d;
            border: 2px solid #6c757d;
        }

    /* Detail Section */
    .detail-column {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        border: 2px solid var(--secondary-color);
        box-shadow: 0 4px 12px rgba(151, 50, 45, 0.08);
    }

    .detail-header {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 14px;
        margin-bottom: 2rem;
        box-shadow: 0 6px 16px rgba(151, 50, 45, 0.3);
    }

        .detail-header h5 {
            margin: 0;
            font-weight: 700;
            font-size: 1.4rem;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
        }

    /* Tables */
    .detail-table {
        background: white;
        border-radius: 14px;
        overflow: hidden;
        border: 2px solid var(--secondary-color);
        box-shadow: 0 4px 12px rgba(151, 50, 45, 0.08);
    }

        .detail-table table {
            margin: 0;
            width: 100%;
        }

        .detail-table th {
            background: linear-gradient(135deg, var(--secondary-color) 0%, #ffd97d 100%);
            color: var(--primary-color);
            font-weight: 700;
            padding: 1.25rem 1.5rem;
            border: none;
            font-size: 1rem;
        }

        .detail-table td {
            padding: 1.25rem 1.5rem;
            border-bottom: 2px solid var(--bg-cream);
            font-size: 1rem;
        }

        .detail-table tbody tr:last-child td {
            border-bottom: none;
        }

        .detail-table tbody tr:hover {
            background: var(--bg-cream);
        }

    .tax-table {
        background: white;
        border-radius: 14px;
        overflow: hidden;
        border: 2px solid var(--secondary-color);
        box-shadow: 0 4px 12px rgba(151, 50, 45, 0.08);
    }

        .tax-table thead th {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
            font-weight: 700;
            padding: 1.25rem;
            border: none;
            text-align: center;
            font-size: 1rem;
        }

        .tax-table tbody td {
            padding: 1.25rem;
            text-align: center;
            border-bottom: 2px solid var(--bg-cream);
            font-size: 1rem;
        }

        .tax-table tbody tr:hover {
            background: linear-gradient(90deg, var(--bg-cream) 0%, var(--secondary-color) 100%);
        }

        .tax-table tbody tr:last-child td {
            border-bottom: none;
        }

    .rate-value {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: var(--secondary-color);
        padding: 0.6rem 1.2rem;
        border-radius: 10px;
        font-weight: 700;
        display: inline-block;
        box-shadow: 0 3px 10px rgba(151, 50, 45, 0.3);
        font-size: 1.05rem;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 5rem;
            color: var(--secondary-color);
            margin-bottom: 1.5rem;
            filter: drop-shadow(2px 2px 4px rgba(151, 50, 45, 0.2));
        }

        .empty-state h5 {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

    /* Loading Spinner */
    .loading-spinner {
        text-align: center;
        padding: 4rem 2rem;
    }

    .spinner {
        width: 60px;
        height: 60px;
        border: 5px solid var(--secondary-color);
        border-top: 5px solid var(--primary-color);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 1rem;
    }

    @@keyframes spin {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }

    /* Animations */
    .content-panel {
        animation: fadeIn 0.5s ease;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Responsive */
    @@media (max-width: 992px) {
        .list-column, .detail-column

    {
        margin-bottom: 1.5rem;
    }

    }

    @@media (max-width: 768px) {
        .page-header

    {
        padding: 1.5rem;
    }

    .page-header h1 {
        font-size: 1.6rem;
    }

    .tab-btn {
        padding: 1rem;
        font-size: 0.95rem;
    }

    .section-title {
        font-size: 1.1rem;
    }

    .list-section {
        max-height: 400px;
    }

    }
</style>

<div class="rates-container">
    <div class="container-fluid px-4">
        <!-- Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1>
                        <i class="bi bi-gear-fill me-3"></i>Quản lý Mức đóng & Thuế
                    </h1>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <button class="edit-btn" @onclick="NavigateToEdit">
                        <i class="bi bi-pencil-square me-2"></i>
                        @(activeTab == "insurance" ? "Chỉnh sửa Bảo hiểm" : "Chỉnh sửa Thuế")
                    </button>
                </div>
            </div>
        </div>

        <!-- Custom Tabs -->
        <div class="custom-tabs">
            <div class="tab-navigation">
                <button class="tab-btn @(activeTab == "insurance" ? "active" : "")"
                        @onclick='() => activeTab = "insurance"'>
                    <i class="bi bi-shield-fill-check"></i>
                    <span>Bảng Bảo Hiểm</span>
                </button>
                <button class="tab-btn @(activeTab == "tax" ? "active" : "")"
                        @onclick='() => activeTab = "tax"'>
                    <i class="bi bi-calculator-fill"></i>
                    <span>Bảng Thuế TNCN</span>
                </button>
            </div>

            <!-- Insurance Tab Content -->
            @if (activeTab == "insurance")
            {
                <div class="content-panel">
                    <div class="row">
                        <!-- Danh sách bảo hiểm -->
                        <div class="col-lg-5 mb-4 mb-lg-0">
                            <div class="list-column">
                                <div class="section-title">
                                    <i class="bi bi-list-ul"></i>
                                    <span>Danh sách Bảo hiểm</span>
                                </div>
                                <div class="list-section">
                                    @if (isLoadingInsurance)
                                    {
                                        <div class="loading-spinner">
                                            <div class="spinner"></div>
                                            <p class="text-muted fw-bold">Đang tải dữ liệu...</p>
                                        </div>
                                    }
                                    else if (insuranceList == null || !insuranceList.Any())
                                    {
                                        <div class="empty-state">
                                            <i class="bi bi-inbox"></i>
                                            <h5>Chưa có dữ liệu</h5>
                                            <p>Không có thông tin bảo hiểm nào</p>
                                        </div>
                                    }
                                    else
                                    {
                                        @foreach (var item in insuranceList)
                                        {
                                            <div class="list-item @(selectedInsurance?.RateSetId == item.RateSetId ? "active" : "")"
                                                 @onclick="() => SelectInsurance(item)">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div style="flex: 1;">
                                                        <div class="item-title">@item.TypeName</div>
                                                        <div class="item-subtitle">
                                                            <i class="bi bi-file-text"></i>
                                                            <span>Mã luật: <strong>@item.LawCode</strong></span>
                                                        </div>
                                                        <div class="item-subtitle">
                                                            <i class="bi bi-calendar-check"></i>
                                                            <span>Hiệu lực: <strong>@item.EffectiveFrom</strong></span>
                                                        </div>
                                                    </div>
                                                    <span class="status-badge @(item.IsActive ? "active" : "inactive")">
                                                        @(item.IsActive ? "Hoạt động" : "Ngưng")
                                                    </span>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Chi tiết bảo hiểm -->
                        <div class="col-lg-7">
                            <div class="detail-column">
                                @if (selectedInsurance != null)
                                {
                                    <div class="detail-header">
                                        <h5>
                                            <i class="bi bi-info-circle-fill me-2"></i>
                                            Chi tiết @selectedInsurance.TypeName
                                        </h5>
                                    </div>

                                    <div class="detail-table">
                                        <table class="table mb-0">
                                            <tbody>
                                                <tr>
                                                    <th style="width: 45%;">
                                                        <i class="bi bi-person-fill me-2"></i>Tỷ lệ nhân viên đóng
                                                    </th>
                                                    <td>
                                                        <span class="rate-value">
                                                            @((selectedInsurance.EmployeeRate * 100).ToString("0.##"))%
                                                        </span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>
                                                        <i class="bi bi-building me-2"></i>Tỷ lệ doanh nghiệp đóng
                                                    </th>
                                                    <td>
                                                        <span class="rate-value">
                                                            @((selectedInsurance.EmployerRate * 100).ToString("0.##"))%
                                                        </span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>
                                                        <i class="bi bi-bar-chart-line me-2"></i>Quy tắc trần
                                                    </th>
                                                    <td><strong style="font-size: 1.05rem;">@selectedInsurance.CapRule</strong></td>
                                                </tr>
                                                <tr>
                                                    <th>
                                                        <i class="bi bi-calendar-event me-2"></i>Hiệu lực từ ngày
                                                    </th>
                                                    <td><strong style="font-size: 1.05rem;">@selectedInsurance.EffectiveFrom</strong></td>
                                                </tr>
                                                <tr>
                                                    <th>
                                                        <i class="bi bi-calendar-x me-2"></i>Hiệu lực đến ngày
                                                    </th>
                                                    <td><strong style="font-size: 1.05rem;">@(selectedInsurance.EffectiveTo?.ToString() ?? "Không có")</strong></td>
                                                </tr>
                                                <tr>
                                                    <th>
                                                        <i class="bi bi-toggles me-2"></i>Trạng thái hiện tại
                                                    </th>
                                                    <td>
                                                        <span class="status-badge @(selectedInsurance.IsActive ? "active" : "inactive")">
                                                            @(selectedInsurance.IsActive ? "Đang hoạt động" : "Ngưng hoạt động")
                                                        </span>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="empty-state">
                                        <i class="bi bi-hand-index"></i>
                                        <h5>Chọn một mức bảo hiểm</h5>
                                        <p>Vui lòng chọn bảo hiểm bên trái để xem chi tiết</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Tax Tab Content -->
            @if (activeTab == "tax")
            {
                <div class="content-panel">
                    <div class="row">
                        <!-- Danh sách thuế -->
                        <div class="col-lg-4 mb-4 mb-lg-0">
                            <div class="list-column">
                                <div class="section-title">
                                    <i class="bi bi-list-ul"></i>
                                    <span>Bảng Thuế hiện hành</span>
                                </div>
                                <div class="list-section">
                                    @if (isLoadingTax)
                                    {
                                        <div class="loading-spinner">
                                            <div class="spinner"></div>
                                            <p class="text-muted fw-bold">Đang tải dữ liệu...</p>
                                        </div>
                                    }
                                    else if (tax == null)
                                    {
                                        <div class="empty-state">
                                            <i class="bi bi-inbox"></i>
                                            <h5>Chưa có dữ liệu</h5>
                                            <p>Không có thông tin bảng thuế</p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="list-item active" @onclick="() => SelectTax(tax)">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div style="flex: 1;">
                                                    <div class="item-title">@tax.TaxName</div>
                                                    <div class="item-subtitle">
                                                        <i class="bi bi-calendar-check"></i>
                                                        <span>Hiệu lực: <strong>@tax.EffectiveFrom</strong></span>
                                                    </div>
                                                </div>
                                                <span class="status-badge @(tax.IsActive ? "active" : "inactive")">
                                                    @(tax.IsActive ? "Hoạt động" : "Ngưng")
                                                </span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Bậc thuế -->
                        <div class="col-lg-8">
                            <div class="detail-column">
                                @if (selectedTax != null && selectedTax.TaxBrackets?.Any() == true)
                                {
                                    <div class="detail-header">
                                        <h5>
                                            <i class="bi bi-graph-up-arrow me-2"></i>
                                            Bậc Thuế Thu Nhập Cá Nhân (TNCN)
                                        </h5>
                                    </div>

                                    <div class="tax-table">
                                        <table class="table mb-0">
                                            <thead>
                                                <tr>
                                                    <th style="width: 12%;">
                                                        <i class="bi bi-hash me-1"></i>
                                                        Bậc
                                                    </th>
                                                    <th style="width: 32%;">
                                                        <i class="bi bi-arrow-down-circle me-1"></i>
                                                        Thu nhập từ
                                                    </th>
                                                    <th style="width: 32%;">
                                                        <i class="bi bi-arrow-up-circle me-1"></i>
                                                        Thu nhập đến
                                                    </th>
                                                    <th style="width: 24%;">
                                                        <i class="bi bi-percent me-1"></i>
                                                        Thuế suất
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int bracketIndex = 1;
                                                }
                                                @foreach (var bracket in selectedTax.TaxBrackets)
                                                {
                                                    <tr>
                                                        <td><strong style="font-size: 1.1rem;">@bracketIndex</strong></td>
                                                        <td><strong>@bracket.LowerBound.ToString("N0") đ</strong></td>
                                                        <td><strong>@(bracket.UpperBound?.ToString("N0") ?? "Không giới hạn") @(bracket.UpperBound.HasValue ? "đ" : "")</strong></td>
                                                        <td>
                                                            <span class="rate-value">
                                                                @((bracket.Rate * 100).ToString("0.##"))%
                                                            </span>
                                                        </td>
                                                    </tr>
                                                    bracketIndex++;
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="empty-state">
                                        <i class="bi bi-calculator"></i>
                                        <h5>Không có bậc thuế</h5>
                                        <p>Chưa có thông tin bậc thuế nào được thiết lập</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string activeTab = "insurance";
    private List<InsuranceRateDTO>? insuranceList;
    private TaxDTO? tax;
    private InsuranceRateDTO? selectedInsurance;
    private TaxDTO? selectedTax;
    private bool isLoadingInsurance = true;
    private bool isLoadingTax = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadInsuranceRates();
        await LoadTax();
    }

    private async Task LoadInsuranceRates()
    {
        try
        {
            var client = HttpFactory.CreateClient("ApiClient");
            var response = await client.GetAsync("api/insurancerateset/active");
            if (response.IsSuccessStatusCode)
            {
                insuranceList = await response.Content.ReadFromJsonAsync<List<InsuranceRateDTO>>();
            }
        }
        catch
        {
            insuranceList = new();
        }
        finally
        {
            isLoadingInsurance = false;
            if (insuranceList?.Any() == true)
                selectedInsurance = insuranceList.First();
        }
    }

    private async Task LoadTax()
    {
        try
        {
            var client = HttpFactory.CreateClient("ApiClient");
            var response = await client.GetAsync("api/tax/active");
            if (response.IsSuccessStatusCode)
            {
                tax = await response.Content.ReadFromJsonAsync<TaxDTO>();
            }
        }
        catch
        {
            tax = null;
        }
        finally
        {
            isLoadingTax = false;
            selectedTax = tax;
        }
    }

    private void SelectInsurance(InsuranceRateDTO dto) => selectedInsurance = dto;
    private void SelectTax(TaxDTO dto) => selectedTax = dto;

    private void NavigateToEdit()
    {
        Navigation.NavigateTo(activeTab == "insurance" ? "/edit-insurance" : "/edit-tax");
    }
