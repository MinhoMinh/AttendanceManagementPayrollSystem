@page "/payrun/self"

@inject IJSRuntime JS
@inject IHttpClientFactory HttpFactory
@using System.Text.Json
@using System.Net.Http.Json
@using AttendanceManagementPayrollSystem.DTO
@using AttendanceManagementPayrollSystem.UI.Components

<h3>Lịch sử bảng lương</h3>

<div class="row mb-3">
    <div class="col-md-3">
        <label>Ngày bắt đầu</label>
        <input type="date" class="form-control" @bind="startDate" @bind:after="()=> OnDateChanged()" />
    </div>
    <div class="col-md-3">
        <label>Ngày kết thúc</label>
        <input type="date" class="form-control" @bind="endDate" @bind:after="()=> OnDateChanged()" />
    </div>
</div>

@if (isLoading)
{
    <p>Đang tải dữ liệu...</p>
}
else if (payRuns == null || !payRuns.Any())
{
    <p>Không có dữ liệu.</p>
}
else
{
    <div class="row">
        <!-- LEFT: List of pay runs -->
        <div class="col-md-4">
            <h5>@Employee?.EmpName</h5>

            <table class="table table-bordered table-hover align-middle shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>Tên</th>
                        <th>Tháng/Năm</th>
                        <th>Net Pay</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var run in payRuns)
                    {
                        var item = run.PayRunItems.FirstOrDefault(); // Only 1 employee
                        <tr class="@(selectedRunId == run.PayrollRunId ? "table-primary" : "")"
                            style="cursor:pointer"
                            @onclick="@(() => SelectRun(run))">

                            <td>@run.Name</td>
                            <td>@run.PeriodMonth/@run.PeriodYear</td>
                            <td>@item?.NetPay</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- RIGHT: PayRunItemDetails -->
        <div class="col-md-8">
            @if (selectedItem != null)
            {
                <PayRunItemDetails Item="selectedItem" />
            }
            else
            {
                <p class="text-muted mt-4">Chọn một kỳ lương để xem chi tiết.</p>
            }
        </div>
    </div>
}

@code {
    private List<PayRunPreviewDTO>? payRuns;
    private bool isLoading = true;

    private EmployeeDTO? Employee;

    private int? selectedRunId;
    private PayRunItemDto? selectedItem;

    private DateTime startDate = DateTime.Now.AddYears(-1);
    private DateTime endDate = DateTime.Now;

    [Inject] INotificationService NotificationService { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var empJson = await JS.InvokeAsync<string>("localStorage.getItem", "employee");
            if (!string.IsNullOrWhiteSpace(empJson))
            {
                Employee = JsonSerializer.Deserialize<EmployeeDTO>(empJson);
            }
        }
        catch (Exception ex)
        {
            NotificationService.Warning("Không thể tìm thấy thông tin nhân viên!", "Lỗi");
            return;
        }

        await LoadPayRunsAsync();
    }

    private async Task LoadPayRunsAsync()
    {
        if (Employee == null || Employee.EmpId == 0)
        {
            NotificationService.Warning("Không thể tìm thấy thông tin nhân viên!", "Lỗi");
            return;
        }

        isLoading = true;

        try
        {
            var client = HttpFactory.CreateClient("ApiClient");

            var query =
                $"api/pay-run/getpayrun/{Employee.EmpId}?start={startDate:yyyy-MM-dd}&end={endDate:yyyy-MM-dd}";

            payRuns = await client.GetFromJsonAsync<List<PayRunPreviewDTO>>(query);
        }
        catch (Exception ex)
        {
            Console.WriteLine("Lỗi khi tải dữ liệu: " + ex.Message);
            NotificationService.Warning("Lỗi khi tải dữ liệu: " + ex.Message, "Lỗi");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnDateChanged()
    {
        await LoadPayRunsAsync();
    }

    private void SelectRun(PayRunPreviewDTO run)
    {
        if (selectedRunId == run.PayrollRunId)
        {
            selectedRunId = null;
            selectedItem = null;
            return;
        }

        selectedRunId = run.PayrollRunId;
        selectedItem = run.PayRunItems.FirstOrDefault(); // Only 1 employee per run
    }
}
