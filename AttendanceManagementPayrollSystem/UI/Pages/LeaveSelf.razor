@page "/leave/self"
@using AttendanceManagementPayrollSystem.DTO
@using AttendanceManagementPayrollSystem.DTOs
@using AttendanceManagementPayrollSystem.Models
@using System.Text.Json
@inject IHttpClientFactory HttpFactory
@inject IJSRuntime JS

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>
    :root {
        --primary-color: #97322D;
        --secondary-color: #FFE4A1;
        --primary-light: #B84940;
        --secondary-dark: #F5D98B;
    }

    .main-wrapper {
        background: linear-gradient(135deg, #FFE4A1 0%, #fff8e1 100%);
        min-height: 100vh;
        padding: 20px 0;
    }

    .page-container {
        max-width: 1600px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .page-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
        color: #FFE4A1;
        padding: 1.5rem 2rem;
        border-radius: 16px;
        margin-bottom: 2rem;
        box-shadow: 0 6px 20px rgba(151, 50, 45, 0.3);
    }

        .page-header h3 {
            margin: 0;
            font-weight: 700;
            font-size: 1.8rem;
            color: #FFE4A1;
        }

    .filter-card {
        background: white;
        padding: 1.5rem;
        border-radius: 16px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 16px rgba(151, 50, 45, 0.1);
        border: 3px solid var(--secondary-color);
    }

        .filter-card label {
            font-weight: 600;
            color: var(--primary-color);
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            display: block;
        }

    .btn-primary-custom {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
        border: none;
        color: #FFE4A1;
        padding: 0.6rem 1.8rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(151, 50, 45, 0.2);
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(151, 50, 45, 0.4);
            color: #FFE4A1;
        }

    .btn-success-custom {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        color: white;
        padding: 0.6rem 1.8rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.2);
    }

        .btn-success-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(40, 167, 69, 0.4);
            color: white;
        }

    .stats-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 16px rgba(151, 50, 45, 0.1);
        border: 3px solid var(--secondary-color);
        text-align: center;
        transition: all 0.3s ease;
    }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 24px rgba(151, 50, 45, 0.2);
        }

        .stats-card .stats-icon {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .stats-card.pending .stats-icon {
            color: #ffc107;
        }

        .stats-card.approved .stats-icon {
            color: #28a745;
        }

        .stats-card.rejected .stats-icon {
            color: var(--primary-color);
        }

        .stats-card .stats-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .stats-card .stats-label {
            color: #6c757d;
            font-weight: 600;
            margin-top: 0.5rem;
        }

    .section-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
        color: #FFE4A1;
        padding: 1rem 1.5rem;
        border-radius: 12px 12px 0 0;
        font-weight: 700;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .requests-container {
        background: white;
        border-radius: 0 0 12px 12px;
        padding: 1.5rem;
        box-shadow: 0 4px 16px rgba(151, 50, 45, 0.1);
        border: 3px solid var(--secondary-color);
        border-top: none;
        min-height: 400px;
        max-height: 500px;
        overflow-y: auto;
    }

        .requests-container::-webkit-scrollbar {
            width: 8px;
        }

        .requests-container::-webkit-scrollbar-track {
            background: var(--secondary-color);
            border-radius: 10px;
        }

        .requests-container::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 10px;
        }

            .requests-container::-webkit-scrollbar-thumb:hover {
                background: var(--primary-light);
            }

    .request-card {
        background: white;
        border: 3px solid #f0f0f0;
        border-radius: 12px;
        padding: 1.2rem;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

        .request-card::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 5px;
            background: var(--primary-color);
            transform: scaleY(0);
            transition: transform 0.3s ease;
        }

        .request-card:hover {
            border-color: var(--secondary-color);
            background: #fffdf7;
        }

            .request-card:hover::before {
                transform: scaleY(1);
            }

        .request-card.active {
            background: var(--secondary-color) !important;
            border-color: var(--primary-color) !important;
        }

            .request-card.active::before {
                transform: scaleY(1);
            }

            .request-card.active .request-type,
            .request-card.active .request-info {
                color: var(--primary-color) !important;
            }

        .request-card .date-badge {
            background: var(--secondary-color);
            color: var(--primary-color);
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 700;
            display: inline-block;
            margin-bottom: 0.8rem;
        }

        .request-card .request-type {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .request-card .request-info {
            color: #6c757d;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

            .request-card .request-info i {
                margin-right: 0.3rem;
            }

    .detail-panel {
        background: white;
        border-radius: 16px;
        box-shadow: 0 6px 24px rgba(151, 50, 45, 0.15);
        overflow: hidden;
        border: 3px solid var(--secondary-color);
        position: sticky;
        top: 20px;
    }

        .detail-panel .panel-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            color: #FFE4A1;
            padding: 1.5rem;
            font-weight: 700;
            font-size: 1.2rem;
        }

        .detail-panel .panel-body {
            padding: 2rem;
        }

        .detail-panel dt {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .detail-panel dd {
            color: #495057;
            margin-bottom: 1.5rem;
            padding-left: 1rem;
            font-size: 1rem;
        }

    .badge-status {
        padding: 0.6rem 1.5rem;
        font-size: 1rem;
        border-radius: 25px;
        font-weight: 700;
        display: inline-block;
    }

    .badge-pending {
        background: linear-gradient(135deg, #ffc107 0%, #ffb300 100%);
        color: #000;
    }

    .badge-approved {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
    }

    .badge-rejected {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
        color: #FFE4A1;
    }

    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 4rem;
            color: var(--secondary-dark);
            margin-bottom: 1rem;
        }

        .empty-state p {
            font-size: 1.1rem;
            margin: 0;
        }

    .info-placeholder {
        text-align: center;
        padding: 4rem 2rem;
        background: linear-gradient(135deg, var(--secondary-color) 0%, var(--secondary-dark) 100%);
        border-radius: 16px;
        color: var(--primary-color);
    }

        .info-placeholder i {
            font-size: 5rem;
            margin-bottom: 1.5rem;
        }

        .info-placeholder p {
            font-size: 1.2rem;
            font-weight: 600;
            margin: 0;
        }

    .loading-spinner {
        text-align: center;
        padding: 3rem;
        color: var(--primary-color);
    }

        .loading-spinner .spinner-border {
            width: 3rem;
            height: 3rem;
            border-width: 0.3rem;
        }

    .modal-content {
        border-radius: 16px;
        border: 3px solid var(--secondary-color);
        overflow: hidden;
    }

    .modal-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
        color: #FFE4A1;
        border: none;
        padding: 1.5rem 2rem;
    }

        .modal-header .modal-title {
            font-weight: 700;
            font-size: 1.3rem;
            color: #FFE4A1;
        }

        .modal-header .btn-close {
            filter: brightness(0) invert(1);
        }

    .modal-body {
        padding: 2rem;
    }

    .form-label {
        color: var(--primary-color);
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        border: 3px solid var(--secondary-color);
        border-radius: 10px;
        padding: 0.7rem 1rem;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(151, 50, 45, 0.15);
        }

    .modal-footer {
        background: #f8f9fa;
        border-top: 3px solid var(--secondary-color);
        padding: 1.5rem 2rem;
    }

    .btn-secondary {
        background: #6c757d;
        border: none;
        border-radius: 10px;
        padding: 0.6rem 1.8rem;
        font-weight: 600;
    }

    .alert-processed {
        background: linear-gradient(135deg, var(--secondary-color) 0%, var(--secondary-dark) 100%);
        border: 3px solid var(--primary-color);
        color: var(--primary-color);
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        font-weight: 700;
        font-size: 1.05rem;
    }

    .text-danger {
        color: var(--primary-color) !important;
    }

    .info-row {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

        .info-row i {
            color: var(--primary-color);
            font-size: 1.1rem;
        }
</style>

<div class="main-wrapper">
    <div class="page-container">
        <div class="page-header">
            <h3>
                <i class="bi bi-calendar-check"></i> Quản lý nghỉ phép của tôi
            </h3>
        </div>

        <div class="filter-card">
            <div class="row align-items-end g-3">
                <div class="col-lg-3 col-md-6">
                    <label>Từ ngày:</label>
                    <InputDate @bind-Value="fromDate" class="form-control" />
                </div>
                <div class="col-lg-3 col-md-6">
                    <label>Đến ngày:</label>
                    <InputDate @bind-Value="toDate" class="form-control" />
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="d-flex gap-2 flex-wrap">
                        <button class="btn btn-primary-custom" @onclick="LoadData">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                        <button class="btn btn-success-custom" @onclick="ShowCreateModal">
                            <i class="bi bi-plus-circle"></i> Tạo yêu cầu mới
                        </button>
                    </div>
                </div>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="loading-spinner">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3 fw-bold">Đang tải dữ liệu...</p>
            </div>
        }
        else
        {
            <!-- Thống kê -->
            <div class="row mb-4">
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="stats-card pending">
                        <div class="stats-icon"><i class="bi bi-clock-history"></i></div>
                        <div class="stats-number">@pendingRequests.Count</div>
                        <div class="stats-label">Đang chờ duyệt</div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="stats-card approved">
                        <div class="stats-icon"><i class="bi bi-check-circle-fill"></i></div>
                        <div class="stats-number">@approvedRequests.Count</div>
                        <div class="stats-label">Đã được duyệt</div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="stats-card rejected">
                        <div class="stats-icon"><i class="bi bi-x-circle-fill"></i></div>
                        <div class="stats-number">@rejectedRequests.Count</div>
                        <div class="stats-label">Đã bị từ chối</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Danh sách yêu cầu -->
                <div class="col-lg-5 col-md-12 mb-4">
                    @if (leaveRequests == null || !leaveRequests.Any())
                    {
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p>Không có dữ liệu trong khoảng thời gian này.</p>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <div class="section-header">
                                <i class="bi bi-list-ul"></i> Tất cả yêu cầu (@leaveRequests.Count)
                            </div>
                            <div class="requests-container">
                                @foreach (var item in leaveRequests.OrderByDescending(x => x.ReqDate))
                                {
                                    <div class="request-card @(selectedRequest?.ReqId == item.ReqId ? "active" : "")"
                                         @onclick="() => SelectRequest(item)">
                                        <div class="date-badge">
                                            @FormatDate(item.StartDate) → @FormatDate(item.EndDate)
                                        </div>
                                        <div class="request-type">@GetLeaveTypeName(item.TypeId)</div>
                                        <div class="request-info">
                                            <span><i class="bi bi-calendar-event"></i>@item.NumbersOfDays ngày</span>
                                            <span><i class="bi bi-clock"></i>@FormatDate(item.ReqDate)</span>
                                            @if (item.Status == "Approved")
                                            {
                                                <span class="badge badge-approved" style="padding: 0.3rem 0.8rem; font-size: 0.75rem;">Đã được duyệt</span>
                                            }
                                            else if (item.Status == "Rejected")
                                            {
                                                <span class="badge badge-rejected" style="padding: 0.3rem 0.8rem; font-size: 0.75rem;">Đã bị từ chối</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-pending" style="padding: 0.3rem 0.8rem; font-size: 0.75rem;">Chờ duyệt</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Chi tiết yêu cầu -->
                <div class="col-lg-7 col-md-12">
                    @if (selectedRequest == null)
                    {
                        <div class="info-placeholder">
                            <i class="bi bi-info-circle"></i>
                            <p>Chọn một yêu cầu bên trái để xem chi tiết</p>
                        </div>
                    }
                    else
                    {
                        <div class="detail-panel">
                            <div class="panel-header">
                                <i class="bi bi-file-text"></i> Chi tiết yêu cầu nghỉ phép
                            </div>
                            <div class="panel-body">
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        <div class="info-row">
                                            <i class="bi bi-hash"></i>
                                            <span>Mã yêu cầu:</span>
                                        </div>
                                    </dt>
                                    <dd class="col-sm-8">@selectedRequest.ReqId</dd>

                                    <dt class="col-sm-4">
                                        <div class="info-row">
                                            <i class="bi bi-bookmark-fill"></i>
                                            <span>Loại nghỉ phép:</span>
                                        </div>
                                    </dt>
                                    <dd class="col-sm-8"><strong>@GetLeaveTypeName(selectedRequest.TypeId)</strong></dd>

                                    <dt class="col-sm-4">
                                        <div class="info-row">
                                            <i class="bi bi-calendar-plus"></i>
                                            <span>Ngày yêu cầu:</span>
                                        </div>
                                    </dt>
                                    <dd class="col-sm-8">@FormatDate(selectedRequest.ReqDate)</dd>

                                    <dt class="col-sm-4">
                                        <div class="info-row">
                                            <i class="bi bi-calendar-range"></i>
                                            <span>Từ ngày:</span>
                                        </div>
                                    </dt>
                                    <dd class="col-sm-8">@FormatDate(selectedRequest.StartDate)</dd>

                                    <dt class="col-sm-4">
                                        <div class="info-row">
                                            <i class="bi bi-calendar-range"></i>
                                            <span>Đến ngày:</span>
                                        </div>
                                    </dt>
                                    <dd class="col-sm-8">@FormatDate(selectedRequest.EndDate)</dd>

                                    <dt class="col-sm-4">
                                        <div class="info-row">
                                            <i class="bi bi-calendar-event"></i>
                                            <span>Số ngày:</span>
                                        </div>
                                    </dt>
                                    <dd class="col-sm-8"><strong style="font-size: 1.2rem; color: var(--primary-color);">@selectedRequest.NumbersOfDays ngày</strong></dd>

                                    @if (!string.IsNullOrEmpty(selectedRequest.Reason))
                                    {
                                        <dt class="col-sm-4">
                                            <div class="info-row">
                                                <i class="bi bi-chat-left-text-fill"></i>
                                                <span>Lý do:</span>
                                            </div>
                                        </dt>
                                        <dd class="col-sm-8">@selectedRequest.Reason</dd>
                                    }

                                    <dt class="col-sm-4">
                                        <div class="info-row">
                                            <i class="bi bi-flag-fill"></i>
                                            <span>Trạng thái:</span>
                                        </div>
                                    </dt>
                                    <dd class="col-sm-8">
                                        @if (selectedRequest.Status == "Approved")
                                        {
                                            <span class="badge-status badge-approved"><i class="bi bi-check-lg"></i> Đã được duyệt</span>
                                        }
                                        else if (selectedRequest.Status == "Rejected")
                                        {
                                            <span class="badge-status badge-rejected"><i class="bi bi-x-lg"></i> Đã bị từ chối</span>
                                        }
                                        else
                                        {
                                            <span class="badge-status badge-pending"><i class="bi bi-hourglass-split"></i> Đang chờ duyệt</span>
                                        }
                                    </dd>

                                    @if (selectedRequest.ApprovedBy.HasValue)
                                    {
                                        <dt class="col-sm-4">
                                            <div class="info-row">
                                                <i class="bi bi-person-check-fill"></i>
                                                <span>Người duyệt:</span>
                                            </div>
                                        </dt>
                                        <dd class="col-sm-8">@selectedRequest.ApprovedByName</dd>

                                        <dt class="col-sm-4">
                                            <div class="info-row">
                                                <i class="bi bi-calendar-check-fill"></i>
                                                <span>Ngày duyệt:</span>
                                            </div>
                                        </dt>
                                        <dd class="col-sm-8">@selectedRequest.ApprovedDate?.ToString("dd/MM/yyyy")</dd>
                                    }
                                </dl>

                                @if (selectedRequest.Status != "Pending")
                                {
                                    <div class="alert-processed">
                                        <i class="bi bi-info-circle-fill"></i> Yêu cầu này đã được xử lý
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal thêm mới -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">
                    <i class="bi bi-plus-circle"></i> Tạo yêu cầu nghỉ phép mới
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="newRequest" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Loại nghỉ phép <span class="text-danger">*</span></label>
                            <select class="form-select" @bind="newRequest.TypeId">
                                <option value="0">-- Chọn loại --</option>
                                @foreach (var type in types)
                                {
                                    <option value="@type.Id">@type.Name</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ngày yêu cầu <span class="text-danger">*</span></label>
                            <InputDate @bind-Value="requestDate" class="form-control" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Từ ngày <span class="text-danger">*</span></label>
                            <InputDate @bind-Value="newStartDate" class="form-control" @bind-Value:after="UpdateDays" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Đến ngày <span class="text-danger">*</span></label>
                            <InputDate @bind-Value="newEndDate" class="form-control" @bind-Value:after="UpdateDays" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Số ngày</label>
                            <input type="number" class="form-control" value="@calculatedDays" readonly style="background: var(--secondary-color); font-weight: 700; color: var(--primary-color);" />
                        </div>

                        <div class="col-12 mb-3">
                            <label class="form-label">Lý do</label>
                            <textarea class="form-control" rows="3" @bind="newRequest.Reason" placeholder="Nhập lý do nghỉ phép..."></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-lg"></i> Hủy
                        </button>
                        <button type="submit" class="btn btn-primary-custom" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            else
                            {
                                <i class="bi bi-check-lg me-1"></i>
                            }
                            Lưu yêu cầu
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private EmployeeDTO? Employee;
    private List<LeaveRequestDTO> leaveRequests = new();
    private List<LeaveType> types = new();
    private LeaveRequestDTO? selectedRequest;
    private LeaveRequestDTO newRequest = new();

    private DateTime fromDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
    private DateTime toDate = DateTime.Now;
    private DateTime requestDate = DateTime.Now;
    private DateTime? newStartDate;
    private DateTime? newEndDate;

    private bool isLoading = false;
    private bool isSaving = false;
    private bool _initialized;
    private decimal calculatedDays = 0;

    private List<LeaveRequestDTO> pendingRequests =>
        leaveRequests.Where(x => x.Status == "Pending").ToList();

    private List<LeaveRequestDTO> approvedRequests =>
        leaveRequests.Where(x => x.Status == "Approved").ToList();

    private List<LeaveRequestDTO> rejectedRequests =>
        leaveRequests.Where(x => x.Status == "Rejected").ToList();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            _initialized = true;
            try
            {
                var empJson = await JS.InvokeAsync<string>("localStorage.getItem", "employee");
                if (!string.IsNullOrWhiteSpace(empJson))
                {
                    Employee = JsonSerializer.Deserialize<EmployeeDTO>(empJson);
                    await LoadTypes();
                    await LoadData();
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", "Không thể tìm thấy thông tin nhân viên!");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Lỗi: {ex.Message}");
            }
            StateHasChanged();
        }
    }

    private async Task LoadTypes()
    {
        try
        {
            var client = HttpFactory.CreateClient("ApiClient");
            var response = await client.GetFromJsonAsync<IEnumerable<LeaveType>>("api/leave/rates");
            if (response != null)
            {
                types = response.ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading types: {ex.Message}");
        }
    }

    private async Task LoadData()
    {
        if (Employee == null) return;

        isLoading = true;
        try
        {
            var client = HttpFactory.CreateClient("ApiClient");
            var url = $"api/leave/history?empId={Employee.EmpId}&startDate={DateOnly.FromDateTime(fromDate):yyyy-MM-dd}&endDate={DateOnly.FromDateTime(toDate):yyyy-MM-dd}";

            var response = await client.GetFromJsonAsync<IEnumerable<LeaveRequestDTO>>(url);
            leaveRequests = response?.ToList() ?? new List<LeaveRequestDTO>();

            selectedRequest = null;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
            await JS.InvokeVoidAsync("alert", $"Lỗi khi tải dữ liệu: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SelectRequest(LeaveRequestDTO request)
    {
        selectedRequest = request;
    }

    private async Task ShowCreateModal()
    {
        newRequest = new LeaveRequestDTO
        {
            EmpId = Employee?.EmpId ?? 0,
            Status = "Pending"
        };
        requestDate = DateTime.Now;
        newStartDate = null;
        newEndDate = null;
        calculatedDays = 0;
        await JS.InvokeVoidAsync("eval", "new bootstrap.Modal(document.getElementById('createModal')).show()");
    }

    private void UpdateDays()
    {
        if (newStartDate.HasValue && newEndDate.HasValue)
        {
            var start = newStartDate.Value;
            var end = newEndDate.Value;

            if (end < start)
            {
                calculatedDays = 0;
                return;
            }

            int businessDays = 0;
            for (var date = start; date <= end; date = date.AddDays(1))
            {
                if (date.DayOfWeek != DayOfWeek.Saturday && date.DayOfWeek != DayOfWeek.Sunday)
                {
                    businessDays++;
                }
            }

            calculatedDays = businessDays;
        }
        else
        {
            calculatedDays = 0;
        }
    }

    private async Task HandleSubmit()
    {
        if (newRequest.TypeId == 0)
        {
            await JS.InvokeVoidAsync("alert", "Vui lòng chọn loại nghỉ phép");
            return;
        }

        if (!newStartDate.HasValue || !newEndDate.HasValue)
        {
            await JS.InvokeVoidAsync("alert", "Vui lòng chọn ngày bắt đầu và kết thúc");
            return;
        }

        if (newEndDate < newStartDate)
        {
            await JS.InvokeVoidAsync("alert", "Ngày kết thúc phải sau ngày bắt đầu");
            return;
        }

        isSaving = true;
        try
        {
            newRequest.ReqDate = DateOnly.FromDateTime(requestDate);
            newRequest.StartDate = DateOnly.FromDateTime(newStartDate.Value);
            newRequest.EndDate = DateOnly.FromDateTime(newEndDate.Value);
            newRequest.NumbersOfDays = calculatedDays;
            newRequest.EmpId = Employee?.EmpId ?? 0;
            newRequest.EmpName = Employee.EmpName;

            var client = HttpFactory.CreateClient("ApiClient");
            var response = await client.PostAsJsonAsync("api/leave/request", newRequest);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Tạo yêu cầu thành công");
                await JS.InvokeVoidAsync("eval", "bootstrap.Modal.getInstance(document.getElementById('createModal')).hide()");
                await LoadData();
            }
            else
            {
                var content = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Không thể tạo yêu cầu.\nStatus: {response.StatusCode}\nDetails: {content}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Lỗi: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private string GetLeaveTypeName(int typeId)
    {
        return types.FirstOrDefault(t => t.Id == typeId)?.Name ?? "N/A";
    }

    private string FormatDate(DateOnly date)
    {
        return date.ToString("dd/MM/yyyy");
    }
}

