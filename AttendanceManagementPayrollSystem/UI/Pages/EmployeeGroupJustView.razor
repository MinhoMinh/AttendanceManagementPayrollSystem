        }

        100% {
            transform: rotate(360deg);
        }
    }

    .no-departments {
        background: white;
        padding: 4rem;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

        .no-departments i {
            font-size: 5rem;
            color: var(--primary-cream);
            margin-bottom: 1.5rem;
        }

        .no-departments h4 {
            color: var(--primary-red);
