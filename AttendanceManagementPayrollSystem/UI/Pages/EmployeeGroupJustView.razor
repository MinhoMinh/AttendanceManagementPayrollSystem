<div class="employee-group-wrapper">
    <div class="page-header">
        <h3><i class="bi bi-people-fill"></i> Danh sách nhân viên theo phòng ban</h3>
    </div>

    @if (departments == null)
    {
        <div class="loading-spinner">
            <div class="spinner"></div>
            <p class="mt-3 text-muted">Đang tải dữ liệu...</p>
        </div>
    }
    else if (!departments.Any())
    {
        <div class="no-departments">
            <i class="bi bi-inbox"></i>
            <h4>Chưa có dữ liệu phòng ban</h4>
            <p class="text-muted">Hiện tại chưa có phòng ban nào trong hệ thống.</p>
        </div>
    }
    else
    {
        <div class="stats-bar">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-building"></i>
                </div>
                <div class="stat-value">@departments.Count</div>
                <div class="stat-label">Phòng ban</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-person-badge"></i>
                </div>
                <div class="stat-value">@departments.Sum(d => d.Employees?.Count ?? 0)</div>
                <div class="stat-label">Nhân viên</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-graph-up"></i>
                </div>
                <div class="stat-value">@(departments.Any(d => d.Employees?.Any() == true) ? Math.Round(departments.Average(d => d.Employees?.Count ?? 0), 1) : 0)</div>
                <div class="stat-label">Trung bình/PB</div>
            </div>
        </div>

        <div class="search-box">
            <div style="position: relative;">
                <i class="bi bi-search search-icon"></i>
                <input type="text"
                       class="search-input"
                       placeholder="Tìm kiếm phòng ban hoặc nhân viên..."
                       @bind="searchQuery"
                       @bind:event="oninput" />
            </div>
        </div>

        <div class="accordion" id="departmentAccordion">
            @foreach (var dep in FilteredDepartments)
            {
                <div class="department-card">
                    <div class="department-header @(expandedDepartments.Contains(dep.DepId) ? "active" : "")"
                         @onclick="() => ToggleDepartment(dep.DepId)">
                        <div class="department-title">
                            <i class="bi bi-building-fill"></i>
                            <span>@(dep.DepName ?? "Không thuộc phòng ban nào")</span>
                            <span class="department-badge">
                                @(dep.Employees?.Count ?? 0) nhân viên
                            </span>
                        </div>
                        <i class="bi bi-chevron-down expand-icon @(expandedDepartments.Contains(dep.DepId) ? "rotated" : "")"></i>
                    </div>

                    @if (expandedDepartments.Contains(dep.DepId))
                    {
                        <div class="department-body">
                            @if (dep.Employees == null || !dep.Employees.Any())
                            {
                                <div class="empty-state">
                                    <i class="bi bi-person-x"></i>
                                    <p>Không có nhân viên nào trong phòng ban này.</p>
                                </div>
                            }
                            else
                            {
                                <div class="employee-grid">
                                    @foreach (var emp in FilterEmployees(dep.Employees))
                                    {
                                        <div class="employee-card">
                                            <div class="employee-avatar">
                                                @GetInitials(emp.EmpName)
                                            </div>
                                            <div class="employee-name">@emp.EmpName</div>
                                            <div class="employee-info">
                                                <i class="bi bi-telephone-fill"></i>
                                                <span>@(emp.EmpPhoneNumber ?? "Chưa cập nhật")</span>
                                            </div>
                                            <button class="btn-view-detail"
                                                    @onclick="() => ViewEmployeeDetail(emp.EmpId)">
                                                <i class="bi bi-eye"></i>
                                                Xem chi tiết
                                            </button>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        </div>

        @if (!FilteredDepartments.Any())
        {
            <div class="no-departments">
                <i class="bi bi-search"></i>
                <h4>Không tìm thấy kết quả</h4>
                <p class="text-muted">Không có phòng ban hoặc nhân viên nào khớp với từ khóa "@searchQuery"</p>
            </div>
        }
    }
</div>


@code {
    private bool showPassword = false;

    private List<EmployeeGroupByDepartmentDTO>? departments;
    private string searchQuery = "";
    private HashSet<int> expandedDepartments = new();

    private bool isLoadingDepartments = false;
    private bool isSubmitting = false;

    private bool showToast = false;
    private string toastMessage = "";
    private string toastType = "success";

    protected override async Task OnInitializedAsync()
    {
        var client = HttpFactory.CreateClient("ApiClient");
        departments = await client.GetFromJsonAsync<List<EmployeeGroupByDepartmentDTO>>(
            "api/employee/getgroupbydepforview");

    }




    private void ShowToast(string message, string type)
    {
        toastMessage = message;
        toastType = type;
        showToast = true;
        StateHasChanged();

        _ = HideToastAfterDelay();
    }

    private async Task HideToastAfterDelay()
    {
        await Task.Delay(4000);
        showToast = false;
        StateHasChanged();
    }

    private void ViewEmployeeDetail(int empId)
    {
        NavManager.NavigateTo($"/employees/detail/{empId}?from=view");
    }

    private void ToggleDepartment(int depId)
    {
        if (expandedDepartments.Contains(depId))
            expandedDepartments.Remove(depId);
        else
            expandedDepartments.Add(depId);
    }

    private IEnumerable<EmployeeGroupByDepartmentDTO> FilteredDepartments
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchQuery))
                return departments ?? new List<EmployeeGroupByDepartmentDTO>();

            var query = searchQuery.ToLower();
            return departments?.Where(d =>
                (d.DepName?.ToLower().Contains(query) ?? false) ||
                (d.Employees?.Any(e => e.EmpName?.ToLower().Contains(query) ?? false) ?? false)
            ) ?? new List<EmployeeGroupByDepartmentDTO>();
        }
    }

    private IEnumerable<EmployeeInDepartmentDTO> FilterEmployees(List<EmployeeInDepartmentDTO> employees)
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
            return employees;

        var query = searchQuery.ToLower();
        return employees.Where(e => e.EmpName?.ToLower().Contains(query) ?? false);
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name))
            return "?";

        var words = name.Trim().Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (words.Length == 1)
