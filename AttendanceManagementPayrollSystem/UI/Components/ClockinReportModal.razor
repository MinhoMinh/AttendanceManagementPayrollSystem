@using System.Text.Json
@using AttendanceManagementPayrollSystem.DTO
@inject INotificationService NotificationService
@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject IJSRuntime JS

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .modal-custom .modal-content {
        border: 3px solid #97322D;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(151, 50, 45, 0.3);
    }

    .modal-custom .modal-header {
        background: linear-gradient(135deg, #FFE4A1 0%, #FFF5DC 100%);
        border-bottom: 3px solid #97322D;
        color: #97322D;
        font-weight: bold;
    }

    .modal-custom .modal-title {
        color: #97322D;
        font-weight: 700;
    }

    .modal-custom .btn-close {
        filter: brightness(0) saturate(100%) invert(19%) sepia(58%) saturate(2194%) hue-rotate(341deg) brightness(95%) contrast(93%);
    }

    .modal-custom .modal-body {
        background-color: #FFFEF9;
    }

    .modal-custom .form-label.fw-bold {
        color: #97322D;
        font-size: 0.95rem;
    }

    .modal-custom .form-control,
    .modal-custom textarea.form-control,
    .modal-custom input[type="number"] {
        border: 2px solid #FFE4A1;
        border-radius: 6px;
    }

        .modal-custom .form-control:focus,
        .modal-custom textarea.form-control:focus,
        .modal-custom input[type="number"]:focus {
            border-color: #97322D;
            box-shadow: 0 0 0 0.2rem rgba(151, 50, 45, 0.25);
        }

    .info-card {
        background-color: #FFF9F0;
        border: 2px solid #FFE4A1;
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 15px;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
        padding: 8px;
        background-color: white;
        border-radius: 4px;
        border-left: 3px solid #97322D;
    }

    .info-label {
        color: #97322D;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .info-value {
        color: #333;
        font-weight: 500;
    }

    .badge-custom-success {
        background-color: #97322D !important;
        color: white;
        padding: 5px 12px;
        border-radius: 6px;
    }

    .badge-custom-danger {
        background-color: #FFE4A1 !important;
        color: #97322D;
        padding: 5px 12px;
        border-radius: 6px;
        border: 1px solid #97322D;
    }

    .btn-primary-custom {
        background-color: #97322D;
        border-color: #97322D;
        color: white;
        font-weight: 600;
        padding: 8px 20px;
        border-radius: 6px;
    }

        .btn-primary-custom:hover {
            background-color: #7a2824;
            border-color: #7a2824;
        }

        .btn-primary-custom:disabled {
            background-color: #c5736e;
            border-color: #c5736e;
        }

    .btn-secondary-custom {
        background-color: #FFE4A1;
        border-color: #97322D;
        color: #97322D;
        font-weight: 600;
        padding: 8px 20px;
        border-radius: 6px;
    }

        .btn-secondary-custom:hover {
            background-color: #ffd77a;
            border-color: #7a2824;
            color: #7a2824;
        }

    .file-upload-area {
        border: 2px dashed #FFE4A1;
        border-radius: 8px;
        padding: 15px;
        background-color: #FFFEF9;
        text-align: center;
    }

        .file-upload-area:hover {
            border-color: #97322D;
            background-color: #FFF9F0;
        }

    .text-success-custom {
        color: #97322D !important;
        font-weight: 600;
    }
</style>

@if (Visible)
{
    <div class="modal fade show d-block modal-custom" tabindex="-1" style="background-color: rgba(0,0,0,0.45);">
        <div class="modal-dialog modal-dialog-centered modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">📋 Báo cáo chấm công</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    @if (Component != null)
                    {
                        <div class="info-card">
                            <div class="info-row">
                                <span class="info-label">📅 Ngày</span>
                                <span class="info-value">@($"{Component.Date:dd/MM/yyyy}")</span>
                            </div>

                            <div class="info-row">
                                <span class="info-label">📊 Tình trạng</span>
                                <span class="info-value">
                                    @if (!string.IsNullOrWhiteSpace(Component.Description))
                                    {
                                        bool isFull = Component.Description.Trim() == "Đủ giờ";
                                        <span class="@(isFull ? "badge-custom-success" : "badge-custom-danger")">
                                            @Component.Description
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Không có dữ liệu</span>
                                    }
                                </span>
                            </div>

                            <div class="info-row">
                                <span class="info-label">⏰ Giờ làm</span>
                                <span class="info-value">@($"{(Component.WorkHours ?? 0m):F2}/{(Component.ScheduledHours ?? 0m):F2}")</span>
                            </div>

                            <div class="info-row">
                                <span class="info-label">💼 Công làm</span>
                                <span class="info-value">@($"{(Component.WorkUnits ?? 0m):F2}/{(Component.ScheduledUnits ?? 0m):F2}")</span>
                            </div>

                            <div class="info-row">
                                <span class="info-label">🕐 Giờ vào / Giờ ra</span>
                                <span class="info-value">
                                    @(Component.CheckIn?.ToString("HH:mm") ?? "--:--") / @(Component.CheckOut?.ToString("HH:mm") ?? "--:--")
                                </span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">✏️ Công làm muốn chỉnh sửa</label>
                            <input type="number"
                                   class="form-control"
                                   @bind="RequestedValue"
                                   step="0.01"
                                   min="0"
                                   placeholder="Nhập công làm mong muốn (VD: 1.00)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">💬 Lý do báo cáo</label>
                            <textarea class="form-control"
                                      @bind="ReportMessage"
                                      placeholder="Nhập lý do bạn muốn báo cáo..."
                                      rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">📎 File đính kèm (tùy chọn)</label>
                            <div class="file-upload-area">
                                <InputFile OnChange="OnFileSelected" />
                            </div>
                            @if (!string.IsNullOrWhiteSpace(FileName))
                            {
                                <small class="text-success-custom mt-2 d-block">✓ Đã chọn: @FileName</small>
                            }
                        </div>


                        <div class="mt-3 d-flex justify-content-end gap-2">
                            <button class="btn btn-primary-custom"
                                    disabled="@IsSubmitting"
                                    @onclick="SubmitReport">
                                @(IsSubmitting ? "⏳ Đang gửi..." : "📤 Gửi báo cáo")
                            </button>

                            @if (LastReportId.HasValue)
                            {
                                <button class="btn btn-secondary-custom"
                                        @onclick="@(() => Nav.NavigateTo($"/attendance/report/{LastReportId.Value}"))">
                                    📜 Xem lịch sử
                                </button>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Không có dữ liệu ca làm để báo cáo.</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public ClockinComponentDto? Component { get; set; }

    private bool Visible;
    private bool IsSubmitting;
    private string? ReportMessage;
    private string? FileName;
    private IBrowserFile? SelectedFile;
    private int? LastReportId;
    private EmployeeDTO? Employee;
    private bool _initialized;

    private decimal RequestedValue;

    public async Task ShowAsync(ClockinComponentDto component)
    {
        Console.WriteLine("🟢 ShowAsync được gọi!");
        Component = component;
        ReportMessage = string.Empty;
        FileName = null;
        SelectedFile = null;
        LastReportId = null;

        Visible = true;
        await InvokeAsync(StateHasChanged);
    }

    private void Close()
    {
        Visible = false;
    }

    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        SelectedFile = e.File;
        FileName = SelectedFile?.Name;
    }

    private async Task SubmitReport()
    {
        if (Component == null)
        {
            NotificationService.Warning("Không xác định được ca làm!", "Lỗi");
            return;
        }

        if (string.IsNullOrWhiteSpace(ReportMessage))
        {
            NotificationService.Warning("Vui lòng nhập lý do báo cáo!", "Thiếu thông tin");
            return;
        }

        if (RequestedValue <= 0)
        {
            NotificationService.Warning("Vui lòng nhập công làm hợp lệ!", "Thiếu thông tin");
            return;
        }

        if (Employee == null)
        {
            NotificationService.Error("Không xác định được thông tin nhân viên!", "Lỗi");
            return;
        }

        IsSubmitting = true;
        try
        {
            var client = HttpFactory.CreateClient("ApiClient");
            var content = new MultipartFormDataContent
        {
            { new StringContent(Employee.EmpId.ToString()), "EmployeeId" },
            { new StringContent(Component.Id.ToString()), "ClockInComponentId" },
            { new StringContent(RequestedValue.ToString(System.Globalization.CultureInfo.InvariantCulture)), "RequestedValue" },
            { new StringContent(ReportMessage), "Message" }
        };

            if (SelectedFile != null)
            {
                var stream = SelectedFile.OpenReadStream(maxAllowedSize: 10_000_000);
                content.Add(new StreamContent(stream), "Attachment", SelectedFile.Name);
            }

            var response = await client.PostAsync("api/clockin-adjustments", content);
            if (response.IsSuccessStatusCode)
            {
                NotificationService.Success("Báo cáo đã được gửi thành công!", "Thành công");
                Close();
            }
            else
            {
                var err = await response.Content.ReadAsStringAsync();
                NotificationService.Error($"Gửi báo cáo thất bại: {err}", "Lỗi");
            }
        }
        catch (Exception ex)
        {
            NotificationService.Error($"Đã xảy ra lỗi: {ex.Message}", "Lỗi");
        }
        finally
        {
            IsSubmitting = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            _initialized = true;
            try
            {
                var empJson = await JS.InvokeAsync<string>("localStorage.getItem", "employee");
                if (!string.IsNullOrWhiteSpace(empJson))
                {
                    Employee = JsonSerializer.Deserialize<EmployeeDTO>(empJson);
                }
                else
                {
                    NotificationService.Warning("Không thể tìm thấy thông tin nhân viên!", "Lỗi");
                }
            }
            catch
            {
                NotificationService.Error("Không thể đọc thông tin nhân viên từ localStorage!", "Lỗi");
            }
            StateHasChanged();
        }
    }
}