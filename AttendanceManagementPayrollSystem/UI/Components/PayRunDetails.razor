@using AttendanceManagementPayrollSystem.DTO

@code {
    [Parameter] public PayRunDto? PayRun { get; set; }
}

@if (PayRun == null)
{
    <p>Không có dữ liệu bảng lương.</p>
}
else
{
    <div class="card p-3">
        <h4>@PayRun.Name</h4>
        <table class="table table-sm">
            <tr><th>Kỳ</th><td>@($"{PayRun.PeriodMonth:D2}/{PayRun.PeriodYear}")</td></tr>
            <tr><th>Trạng thái</th><td>@PayRun.Status</td></tr>
            <tr><th>Loại</th><td>@PayRun.Type</td></tr>
            <tr><th>Tạo bởi</th><td>@PayRun.CreatedByName</td></tr>
            <tr><th>Ngày tạo</th><td>@PayRun.CreatedDate.ToShortDateString()</td></tr>
            <tr><th>Duyệt lần 1 bởi</th><td>@PayRun.ApprovedFirstByName</td></tr>
            <tr><th>Duyệt lần 1 lúc</th><td>@PayRun.ApprovedFirstAt?.ToShortDateString()</td></tr>
            <tr><th>Duyệt cuối bởi</th><td>@PayRun.ApprovedFinalByName</td></tr>
            <tr><th>Duyệt cuối lúc</th><td>@PayRun.ApprovedFinalAt?.ToShortDateString()</td></tr>
            <tr><th>Từ chối bởi</th><td>@PayRun.RejectedByName</td></tr>
            <tr><th>Từ chối lúc</th><td>@PayRun.RejectedAt?.ToShortDateString()</td></tr>
            <tr><th>tax</th><td>@PayRun.TaxId</td></tr>
            <tr><th>insurance social</th><td>@PayRun.SocialInsuranceId</td></tr>
            <tr><th>insurance health</th><td>@PayRun.HealthInsuranceId</td></tr>
            <tr><th>insurance unemp</th><td>@PayRun.UnemployeeInsuranceId</td></tr>
            <tr><th>policy</th><td>@PayRun.SalaryPolicyId</td></tr>
        </table>
    </div>
}
